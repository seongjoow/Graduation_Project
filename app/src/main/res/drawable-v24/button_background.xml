<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"> //기본 상태
        <shape>
            <corners android:radius="40dp"/>
            <solid android:color="@color/mango"/>
            <stroke
                android:color="@color/grey_border"
                android:width="3dp">
            </stroke>
        </shape>
    </item>

    <item android:state_pressed="true"> //클릭 시
        <shape>
            <corners android:radius="40dp"/>
            <solid android:color="@color/mango"/>
            <stroke
                android:color="@color/grey_border"
                android:width="3dp">
            </stroke>
        </shape>
    </item>

    <item android:state_enabled="false"> //사용(클릭) 불가 상태
        <shape>
            <corners android:radius="40dp"/>
            <solid android:color="@color/grey_border">
            </solid>
            <stroke
                android:color="@color/grey_border"
                android:width="3dp">
            </stroke>
        </shape>
    </item>
</selector>

